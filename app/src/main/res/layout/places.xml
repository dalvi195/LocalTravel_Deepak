<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardView"
        app:cardBackgroundColor="#153952"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp">
    
    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/placeImg"
            android:scaleType="fitXY"
            android:clickable="true"/>
        
        <androidx.appcompat.widget.AppCompatTextView
            android:text="TextView"
            android:layout_below="@id/placeImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#ffffff"
            android:layout_centerHorizontal="true"
            android:id="@+id/placeName"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:text="TextView"
            android:layout_below="@id/placeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:id="@+id/placeDescription"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favButton"
            android:text="Add To Favourate List"
            android:layout_below="@+id/placeDescription"/>

        
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mapOnList"
            android:text="MAP"
            android:layout_below="@+id/favButton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ola"
            android:text="Book Cab"
            android:layout_below="@+id/mapOnList"/>



    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
