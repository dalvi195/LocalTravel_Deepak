<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardView"
        app:cardBackgroundColor="#153952"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/placeImg1"
                android:scaleType="fitXY"
                android:clickable="true"/>

            <TextView
                android:text="TextView"
                android:layout_below="@id/placeImg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="#ffffff"
                android:layout_centerHorizontal="true"
                android:id="@+id/placeName1"/>

            <TextView
                android:text="TextView"
                android:layout_below="@id/placeName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_centerHorizontal="true"
                android:id="@+id/placeDescription1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/favButton1"
                android:text="Remove From Favourate List"
                android:layout_below="@+id/placeDescription1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mapOnList1"
                android:text="MAP"
                android:layout_below="@+id/favButton1"/>


            

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
