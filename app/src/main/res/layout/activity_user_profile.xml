<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0000">

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/user_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_info"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:textColor= "@color/white"/>


        <TextView
            android:id="@+id/user_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textColor= "@color/white"/>

        <TextView
            android:id="@+id/name_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@drawable/user_info_border"

            />
        <TextView
            android:id="@+id/user_info_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number : "
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textColor= "@color/white"/>

        <TextView
            android:id="@+id/number_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@drawable/user_info_border"
            />
        <TextView
            android:id="@+id/user_info_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address : "
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textColor= "@color/white"/>

        <TextView
            android:id="@+id/email_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@drawable/user_info_border"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoLayout"
        >

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Password : "
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textColor= "@color/white"/>

        <EditText
            android:id="@+id/edtPassEnter"
            android:layout_below="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@drawable/user_info_border"
            />

        <TextView
            android:id="@+id/passwordConfirm"
            android:layout_below="@+id/edtPassEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password : "
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textColor= "@color/white"/>

        <EditText
            android:id="@+id/edtPassConfirm"
            android:layout_below="@+id/passwordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="30dp"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:background="@drawable/user_info_border"
            />
        <Button
            android:layout_below="@id/edtPassConfirm"
            android:id="@+id/updatePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Password"  />

    </RelativeLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/passwordChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password" />

        <Button
            android:id="@+id/homeGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home" />
    </LinearLayout>


</RelativeLayout>
